
5 ' ASCII TABLE - MarMSX 2020
10 COLOR 15,0,0:SCREEN 2:DX=22:DY=5:SX=13:SY=11
20 OPEN"GRP:"AS#1
30 FX=17*SX:FY=17*SY
40 FOR I=0 TO 16
50 IF I<16 THEN PRESET((I+1)*SX+DX,DY):PRINT#1,HEX$(I):PRESET(DX,(I+1)*SY+DY):PRINT#1,HEX$(I)
60 LINE(I*SX+DX-4,DY-2)-(I*SX+DX-4,DY-2+FY),15
70 LINE(DX-4,I*SY+DY-2)-(DX-4+FX,I*SY+DY-2),15
80 NEXT I
90 LINE(DX-4+FX,DY-2)-(DX-4+FX,DY-2+FY),15:LINE(DX-4,DY-2+FY)-(DX-4+FX,DY-2+FY),15
100 X=DX+SX:Y=DY+SY
110 FOR C=0 TO 255
120 PRESET(X,Y):IF C>32 THEN PRINT#1,CHR$(C) ELSE PRINT#1,CHR$(&H01)+CHR$(&H40+C)
130 X=X+SX:IF X>=FX+DX THEN X=DX+SX:Y=Y+SY
140 NEXT C
150 OP$=INPUT$(1)
160 RUN"AUTOEXEC.BAS"